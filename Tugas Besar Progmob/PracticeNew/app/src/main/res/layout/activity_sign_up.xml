    <View
        android:id="@+id/view8"
        android:layout_width="304dp"
        android:layout_height="449dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/rounded_view_white"
        app:layout_constraintBottom_toBottomOf="@+id/buttonSignUp1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textUsernameSignup"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="80dp"
        android:text="HELLO!"
        android:textColor="@color/lightbrown"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="215dp"
        android:layout_height="62dp"
        android:text="Please complete the form bellow to register"
        android:fontFamily="@font/font1"
        android:textColor="@color/grey"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/textUsernameSignup"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="Create a Username"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <EditText
        android:id="@+id/textNameSignup"
        android:layout_width="212dp"
        android:layout_height="53dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textUsernameSignup"
        app:layout_constraintTop_toBottomOf="@+id/textUsernameSignup" />

    <EditText
        android:id="@+id/textPasswordSignup1"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="Re-Enter New Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textPasswordSignup"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordSignup" />

    <EditText
        android:id="@+id/textPasswordSignup"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="New Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textPhoneSignup"
        app:layout_constraintTop_toBottomOf="@+id/textPhoneSignup" />

    <EditText
        android:id="@+id/textEmailSignup"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textNameSignup"
        app:layout_constraintTop_toBottomOf="@+id/textNameSignup" />

    <EditText
        android:id="@+id/textPhoneSignup"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:fontFamily="@font/font1"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/textEmailSignup"
        app:layout_constraintTop_toBottomOf="@+id/textEmailSignup" />

    <Button
        android:id="@+id/buttonSignUp1"
        android:layout_width="201dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button_brown"
        android:text="SIGN UP"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordSignup1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textPasswordSignup1"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordSignup1" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="already have an account?"
        android:textColor="@color/grey"
        android:textSize="5pt"
        app:layout_constraintStart_toStartOf="@+id/textPasswordSignup1"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordSignup1" />

    <TextView
        android:id="@+id/textLogin"
        android:layout_width="45dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="Log In"
        android:textColor="@color/black"
        android:textSize="5pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordSignup1"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordSignup1" />

</androidx.constraintlayout.widget.ConstraintLayout>