<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LogIn">

        <View
            android:id="@+id/view5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/black_brown_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view6"
            android:layout_width="351dp"
            android:layout_height="596dp"
            android:background="@drawable/rounded_view_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.515"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Please log in to continue"
            android:fontFamily="@font/font1"
            android:textColor="@color/grey"
            android:textSize="10pt"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <EditText
            android:id="@+id/textUsernameLogin"
            android:layout_width="243dp"
            android:layout_height="53dp"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:fontFamily="@font/font1"
            android:hint="Username"
            android:drawableLeft="@drawable/number_logo"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="don't have an account?"
            android:textColor="@color/grey"
            android:textSize="5pt"
            app:layout_constraintStart_toStartOf="@+id/textPasswordLogin"
            app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

        <Button
            android:id="@+id/buttonLogIn1"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:text="Log in"
            android:textColor="@color/white"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="@+id/textRegister"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textRegister"
            android:layout_width="45dp"
            android:layout_height="19dp"
            android:layout_marginTop="30dp"
            android:text="Register"
            android:textColor="@color/black"
            android:textSize="5pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textPasswordLogin"
            app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

        <EditText
            android:id="@+id/textPasswordLogin"
            android:layout_width="243dp"
            android:layout_height="51dp"
            android:layout_marginTop="6dp"
            android:ems="10"
            android:drawableLeft="@drawable/lock_logo"
            android:drawablePadding="10dp"
            android:fontFamily="@font/font1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textUsernameLogin"
            app:layout_constraintTop_toBottomOf="@+id/textUsernameLogin" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:text="WELCOME!"
            android:textColor="@color/black"
            android:textSize="15pt"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.348"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view6" />


</androidx.constraintlayout.widget.ConstraintLayout>