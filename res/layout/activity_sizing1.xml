<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sizing1"
    android:background="@color/white">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="SET YOUR SIZING!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitle2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font1"
        android:text="Please set the size of your sofa based on your own peference in centimeter"
        android:textColor="@color/grey"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="340dp"
        android:layout_height="471dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sizing1" />

    <EditText
        android:id="@+id/textS13"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="108dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS14"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="152dp"
        android:ems="10"
        android:inputType="number"
        android:hint="000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS11"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textS18"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS12"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="228dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textS18"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS18"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:hint="000"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS16"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:inputType="number"
        android:hint="000"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS17"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="number"
        android:hint="000"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/textS15"
        android:layout_width="56dp"
        android:layout_height="54dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="176dp"
        android:ems="10"
        android:inputType="number"
        android:hint="000"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5" />

    <Button
        android:id="@+id/buttonSizing"
        android:layout_width="335dp"
        android:layout_height="72dp"
        android:layout_marginTop="0dp"
        android:text="set size"
        android:textColor="@color/white"
        android:textSize="7pt"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />


</androidx.constraintlayout.widget.ConstraintLayout>